<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/brown900"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llPerfil"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </LinearLayout>
    <ImageView
        android:id="@+id/ivPerfil3"
        android:layout_width="260dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/ivPerfil2"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivPerfil2"
        android:layout_width="260dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/ivPerfil"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvDescripcion"
        style="@style/title_presentation"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@color/yellow900"
        android:padding="32dp"
        android:text="@string/presentation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llPerfil" />

    <ImageView
        android:id="@+id/ivPerfil"
        android:layout_width="260dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:elevation="-10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/llh1"
        android:layout_width="472dp"
        android:layout_height="wrap_content"
        android:background="@color/red300"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="27dp"
        app:layout_constraintStart_toEndOf="@+id/tvDescripcion"
        app:layout_constraintTop_toBottomOf="@+id/ivPerfil2">
        >

        <TextView
            android:id="@+id/tvLvlExp"
            style="@style/lbl_experiencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lbl_experience" />

        <TextView
            android:id="@+id/tvResExp"
            style="@style/res_experiencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llh2"
        android:layout_width="472dp"
        android:layout_height="wrap_content"
        android:background="@color/red50"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="27dp"
        app:layout_constraintStart_toEndOf="@+id/tvDescripcion"
        app:layout_constraintTop_toBottomOf="@+id/llh1">

        <TextView
            android:id="@+id/tvLblMot"
            style="@style/lbl_motivacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lbl_motivation" />

        <TextView
            android:id="@+id/tvResMot"
            style="@style/res_motivacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/res_motivation" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCompartir"
        style="@style/lbl_experiencia"
        android:layout_width="130dp"
        android:layout_height="135dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="165dp"
        android:backgroundTint="@color/black"
        android:elevation="5dp"
        android:text="@string/share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>